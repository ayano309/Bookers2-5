<div class = "col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
     <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% follows.each do |follow| %>
      <tr>
       <td><%= link_to image_tag( follow.get_profile_image(100,100)), user_path(@user.id) %></td>
       <td><%= follow.name %></td>
        <td><p>フォロー数：<%= @user.followings.count  %></p></td>
        <td><p>フォロワー数：<%= @user.followers.count %></p></td>
        <td><%= link_to "Show", user_path(follow) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div> 